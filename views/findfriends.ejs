<body>
         
    <br>
    <h1>Find Friends</h1>
        
    <h3>All the users who have an account: </h3>
    <ul>
        <% allusers.forEach(function(users){ %>
         <li>Username: <%= users.username %> </li>
        <% }) %>
    </ul>

    <form class="addfriend-input" method="POST" action="/friendadded">
        <div class="addfriend-container">
        <input type="text" name="addfriend" placeholder="Enter username of friend you would like to add..">
    </div>
        <button type="submit" class="addfriend-btn" name="addfriend">Add friend <i class="bi bi-person-plus-fill"></i></button>
    </form>
   
    
